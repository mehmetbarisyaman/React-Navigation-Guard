{
  "name": "@mehmetbarisyaman/react-navigation-guard",
  "version": "1.0.7",
  "description": "A React hook for preventing navigation when there are unsaved changes, with support for browser refresh and route changes. Compatible with React 19. Requires React Router.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/cjs/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "react",
    "hook",
    "navigation",
    "guard",
    "router",
    "unsaved-changes",
    "prevent-navigation",
    "react-router",
    "typescript"
  ],
  "author": {
    "name": "Mehmet Baris Yaman",
    "url": "https://www.linkedin.com/in/mehmetbarisyaman/",
    "social": {
      "linkedin": "https://www.linkedin.com/in/mehmetbarisyaman/",
      "twitter": "https://x.com/mbarisyaman"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mehmetbarisyaman/React-Navigation-Guard.git"
  },
  "bugs": {
    "url": "https://github.com/mehmetbarisyaman/React-Navigation-Guard/issues"
  },
  "homepage": "https://github.com/mehmetbarisyaman/React-Navigation-Guard#readme",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-router-dom": ">=6.0.0"
  },
  "devDependencies": {
    "@types/react": "19.0.0",
    "rimraf": "6.0.1",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
